# Django Core
DJANGO_SECRET_KEY=django-insecure-digisoft-nexus-change-in-production-2026
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database (SQLite for local dev, PostgreSQL for production)
DATABASE_URL=sqlite:///db.sqlite3

# Redis & Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# JWT
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# HubSpot (optional - leave blank for local dev)
HUBSPOT_ACCESS_TOKEN=
HUBSPOT_PORTAL_ID=
HUBSPOT_PIPELINE_ID=default
HUBSPOT_WEBHOOK_SECRET=

# Zoho CRM (optional)
ZOHO_CLIENT_ID=
ZOHO_CLIENT_SECRET=
ZOHO_REFRESH_TOKEN=
ZOHO_ORG_ID=

# WhatsApp Business API (optional)
WA_PHONE_NUMBER_ID=
WA_ACCESS_TOKEN=
WA_VERIFY_TOKEN=digisoft-wa-verify-token
WA_TEMPLATE_WELCOME=lead_welcome_v1
WA_TEMPLATE_FOLLOWUP=lead_followup_v1
WA_TEMPLATE_SITEVISIT=site_visit_confirm_v1
WA_TEMPLATE_WIN=deal_congratulations_v1

# Meta Conversions API (optional)
META_PIXEL_ID=
META_ACCESS_TOKEN=
META_TEST_EVENT_CODE=

# Slack (optional)
SLACK_WEBHOOK_URL=

# Email (optional)
SENDGRID_API_KEY=
DEFAULT_FROM_EMAIL=noreply@digisoftnexus.com

# Storage (optional - uses local for dev)
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=ap-south-1

# hCaptcha (optional for dev)
HCAPTCHA_SECRET_KEY=
HCAPTCHA_SITE_KEY=

# Google Analytics
GA4_MEASUREMENT_ID=
GA4_API_SECRET=
